@{
  ViewData["Title"] = "Get Involved";
}


<div id="main-content" class="main-content">
    <main class="main-primary" >
        <div class="section section-standout">
            <div class="container">
                <h1>Get Involved</h1>
            </div>
        </div>
        <div class="section section-default">
            <div class="container text-center">
                <div class="row">
                    <div class="half offset-quarter">
                        <h2 class="display">Improve California Services</h2>
                        <i class="ca-gov-icon-favorite color-primary font-size-70x"></i>
                        <i class="ca-gov-icon-favorite color-primary font-size-95x"></i>
                        <i class="ca-gov-icon-favorite color-primary"></i>
                        <i class="ca-gov-icon-favorite color-primary font-size-95x"></i>
                        <i class="ca-gov-icon-favorite color-primary font-size-70x"></i>

                        <p class="lead">
                            Navigating state services can be complicated.
                            The only way we make our services work for you is by working <strong>with</strong> you.
                            Help your state by testing these services.
                           
                        </p>
                    </div>
                   
                </div>
                

            </div>
        </div>
        <div class="section section-primary">
            <div class="container">
                <div class="row">
                    <div class="group">
                        <div class="third">
                            <div class="card card-default">

                                <div class="card-block">
                                    <h3>Get Notified</h3>
                                    <p> We'll send you opportunities to help.</p>

                                    <a class="btn btn-primary"
                                        href="/Home/TesterReg"
                                        target="_blank">

                                        Sign Up
                                    </a>
                                </div>
                            </div>

                        </div>
                        <div class="third">
                            <div class="card card-default">

                                <div class="card-block">
                                    <h3>Create Account</h3>
                                    <p> Track how you've helped and get rewards.</p>

                                    <div class="btn btn-primary">
                                        Create Account
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="third">
                            <div class="card card-default">

                                <div class="card-block">
                                    <h3>Test Now</h3>
                                    <p> Get started testing services now.  No account required!</p>

                                    <div class="center">
                                        <div class="btn btn-primary">
                                            GO
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>

    </main>

</div>
